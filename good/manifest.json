{
  "manifest_version": 3,
  "name": "TasksRewardBot - Chrome v1.0",
  "short_name": "TasksRewardBot",
  "version": "1.0.0",
  "description": "شاهد فيديوهات يوتيوب تلقائياً واربح — TasksRewardBot",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://l.facebook.com/*",
    "https://l.instagram.com/*",
    "https://www.google.com/*",
    "https://perceptive-victory-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TasksRewardBot"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.youtube.com/results*"],
      "js": ["search_helper.js"],
      "run_at": "document_idle"
    }
  ]
}
