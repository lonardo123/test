{
  "manifest_version": 3,
  "name": "TasksRewardBot - اربح من المشاهدة",
  "version": "1.1",
  "description": "شاهد فيديوهات واربح رصيدًا — يدعم تحويل تلقائي إلى روابط خارجية (Facebook/Instagram/Google) إذا تعذر التشغيل على يوتيوب.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "https://l.facebook.com/*",
    "https://l.instagram.com/*",
    "https://www.google.com/*",
    "https://perceptive-victory-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*",
        "https://m.youtube.com/watch*",
        "https://www.youtube.com/shorts/*",
        "https://youtube.com/shorts/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}