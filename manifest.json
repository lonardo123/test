{
  "manifest_version": 3,
  "name": "TasksRewardBot - اربح من المشاهدة (متكاملة مع مشروعك)",
  "version": "1.2",
  "description": "شاهد فيديوهات واربح رصيدًا — قابل للتوصيل بسهولة مع سيرفرك عبر إعداد API Base URL في الإعدادات.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://m.youtube.com/*",
    "http://localhost/*",
    "http://localhost:3000/*",
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://youtube.com/watch*",
        "https://m.youtube.com/watch*",
        "https://www.youtube.com/shorts/*",
        "https://youtube.com/shorts/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}