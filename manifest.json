{
  "manifest_version": 3,
  "name": "TasksRewardBot - اربح من المشاهدة",
  "version": "1.0",
  "description": "شاهد فيديوهات واربح رصيدًا!",
  "permissions": ["storage"],
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [{
    "matches": ["https://www.youtube.com/watch*"],
    "js": ["content.js"]
  }],
  "background": {
    "service_worker": "background.js"
  }
}
